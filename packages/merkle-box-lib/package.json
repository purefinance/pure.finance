  "main": "src/index.js",
  "scripts": {
    "fork:start": "[ -f .env ] && . .env ; npm run fork:stop ; ganache-cli --fork \"$NODE_BASE_URL\" --host 0.0.0.0 --mnemonic \"$MNEMONIC\"",
