{
  "name": "pure-finance",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Gabriel Montes",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "postinstall": "lerna bootstrap",
    "test": "lerna run --stream test"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "env": {
      "es2020": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "site/out"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "mocha": true
        }
      },
      {
        "files": [
          "site/**/*.js"
        ],
        "env": {
          "browser": true
        },
        "extends": [
          "eslint:recommended",
          "plugin:react/recommended",
          "plugin:tailwind/recommended",
          "prettier"
        ],
        "parserOptions": {
          "ecmaFeatures": {
            "jsx": true
          },
          "sourceType": "module"
        },
        "rules": {
          "react/prop-types": "off",
          "react/react-in-jsx-scope": "off",
          "react/jsx-sort-props": "warn"
        },
        "settings": {
          "react": {
            "version": "17.0"
          }
        }
      }
    ],
    "rules": {
      "no-shadow": "warn",
      "no-use-before-define": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint:fix",
    "*.{css,js,json,md}": "npm run format"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
